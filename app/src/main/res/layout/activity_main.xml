<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <android.support.design.card.MaterialCardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="450dp"
             android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:strokeColor="@color/colorAccent"
            app:cardCornerRadius="19dp"
            app:cardElevation="5dp"
            app:strokeWidth="2dp"
           >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent"
                      android:id="@+id/titleview"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="25dp"
                      android:layout_marginRight="10dp"
                      android:textColor="@color/primaryTextColor"
                      android:layout_marginLeft="10dp"
                      android:gravity="center"
                      android:fontFamily="@font/coda"
                      android:textSize="25sp"
                      android:text="Android JetPack\nMaterial Design"/>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_input2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/name_edit_text2"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content"
                        android:hint="Password" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.button.MaterialButton
                    android:layout_width="250dp"
                    style="@style/materialTheme"
                    android:layout_height="77dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:rippleColor="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:paddingRight="30dp"
                    app:cornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="LOGIN"
                    android:textSize="18sp"
                    app:iconSize="50dp"
                    app:icon="@drawable/ic_launcher_foreground"/>

        </LinearLayout>
    </android.support.design.card.MaterialCardView>


    <android.support.design.bottomappbar.BottomAppBar
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="12dp"
            app:fabCradleRoundedCornerRadius="0dp"
            app:fabCradleVerticalOffset="0dp"
            app:backgroundTint="@color/colorPrimary"
            app:navigationIcon="@drawable/ic_dehaze_black_24dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/Widget.MaterialComponents.BottomAppBar"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_check_black_24dp"
            app:layout_anchor="@id/bottom"
            android:id="@+id/floatingActionButt"/>
</android.support.design.widget.CoordinatorLayout>